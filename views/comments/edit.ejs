<% include ../partials/header %>

    <div class="row">
        <h1 class="form-title">Edit Comment:</h1>
        <div class="comment-form">
            <form action="/textbooks/<%=textbook_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Comment:</label>
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"></input>
                </div>
                <button class="btn btn-primary btn-block">Submit!</button>
            </form>
            <a href="/textbooks/<%=textbook_id%>">Go Back</a>
        </div>
        
    </div>

<% include ../partials/footer %>