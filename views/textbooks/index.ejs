<% include ../partials/header %>

    <header class="jumbotron">
        <div>
            <h1><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Welcome to Textbook Marketplace!</h1>
            <p>Buy textbooks for cheap!</p>
            <p>Sell your used textbooks for cash!</p>
            <p>
                <a class="btn btn-primary" href="/textbooks/new">Add New Textbook for sale</a>
            </p>
            <form action="/textbooks" method="GET" class="form-inline" id="textbook-search">
                <div class="form-group">
                    <input type="text" name="search" placeholder="search textbooks..." class="form-control">
                </div>
            </form>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap:wrap;" id="textbook-grid">
        <% textbooks.forEach(function(textbook){ %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <a href="/textbooks/<%=textbook._id%>"><img src="<%= textbook.image %>"></a>
                    <div class="caption">
                        <h4><%=textbook.name%></h4>
                    </div>
                    <a href="/textbooks/<%=textbook._id%>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% }) %>
    </div>

<% include ../partials/footer %>

