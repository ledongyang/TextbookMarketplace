<% include ../partials/header %>

    <div class="row">
        <h1 class="form-title">Add new textbook:</h1>
        <div class="textbook-form">
            <form action="/textbooks" method="POST">
                <div class="form-group">
                    <label>Name:</label>
                    <input class="form-control" type="text" name="textbook[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <label>Select an image file:</label>
                    <input type="file" id="file-input">
                    <img style="border:1px solid gray;width:100%;"  id="preview" src="/images/default.jpg">
                    <input type="hidden" id="image-url" name="textbook[image]" value="/images/default.jpg">
                    <!--<input class="form-control" type="text" name="textbook[image]" placeholder="image url">-->
                </div>
                <div class="form-group">
                    <label>Price:</label>
                    <input class="form-control" type="number" name="textbook[price]" placeholder="price" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label>Location:</label>
                    <input class="form-control" type="text" name="textbook[location]" id="location" placeholder="location">
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <input class="form-control" type="text" name="textbook[description]" placeholder="description">
                </div>
                <button class="btn btn-primary btn-block">Submit!</button>
            </form>
            <a href="/textbooks">Go Back</a>
        </div>
    </div>
    
    <!--custom js for image upload to amazon s3-->
    <script src="/scripts/imageUploader.js" async defer></script>
    
<% include ../partials/footer %>